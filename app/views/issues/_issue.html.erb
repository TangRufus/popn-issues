<tr>
  <td class="text-center">#<%= issue.id %></td>
  <td><span class="label label-default"><%= issue.status.upcase %></span></td>
  <td>
    <strong><%= link_to issue.title, issue %></strong><br>
    <span class="text-muted"><%= local_time_ago(issue.last_commented_at) %> by <strong>@<%= issue.last_commenter %></strong></span>
  </td>
  <td class="text-center"><span class="badge"><%= issue.comments.size - 1 %></span></td>
</tr>
