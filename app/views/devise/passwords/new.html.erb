<%= content_for :title, 'Forgot Password' %>

<!-- Forgot Password Form -->
<%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { :method => :post, :role => 'form', class: "form-horizontal"}) do |f| %>

  <% if f.full_error :not_approved %>
    <div class="alert alert-danger">
      <%= f.full_error :not_approved, class: "text-light-important" %>
    </div>
  <% end %>

  <div class="form-group">
    <div class="col-xs-12">
      <%= f.input :email, autofocus: true, class: 'form-control', placeholder: "Your email.." %>
    </div>
  </div>
  <div class="form-group form-actions">
    <div class="col-xs-12 text-right">
      <%= f.submit "Reset Password", class: "btn btn-lg btn-block btn-effect-ripple btn-primary" %>
    </div>
  </div>
<% end %>
<!-- END Forgot Password -->
