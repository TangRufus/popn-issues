<%= content_for :title, 'Password Reset' %>

<!-- Password Edit Form -->
<%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: "patch", role: "form"}) do |f| %>

  <% if f.full_error :reset_password_token %>
  <div class="col-xs-12">
    <div class="alert alert-danger">
      <%= f.full_error :reset_password_token, class: "text-light-important" %>
    </div>
  </div>
  <% end %>

 <%= f.hidden_field :reset_password_token %>

     <%= f.input :password, autofocus: true, class: 'form-control', placeholder: "Your password..", required: true %>
     <%= f.input :password_confirmation, class: 'form-control', placeholder: "Your password again..", required: true %>

  <div class="form-group form-actions">
      <%= f.button :button, 'Reset Password', class: 'btn btn-lg btn-block btn-effect-ripple btn-primary', data: { disable_with: '<i class="fa fa-circle-o-notch fa-spin"></i> loading...' } %>
  </div>
  <% end %>
<!-- END Password Edit Form -->
