<%= content_for :title, 'Password Reset' %>

<!-- Password Edit Form -->
<%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: "patch", role: "form", class: "form-horizontal"}) do |f| %>

  <% if f.full_error :reset_password_token %>
    <div class="alert alert-danger">
      <%= f.full_error :reset_password_token, class: "text-light-important" %>
    </div>
  <% end %>

 <%= f.hidden_field :reset_password_token %>

  <div class="form-group">
    <div class="col-xs-12">
     <%= f.input :password, autofocus: true, class: 'form-control', placeholder: "Your password..", required: true %>
   </div>
  </div>
    <div class="form-group">
    <div class="col-xs-12">
     <%= f.input :password_confirmation, class: 'form-control', placeholder: "Your password again..", required: true %>
   </div>
  </div>
  <div class="form-group form-actions">
    <div class="col-xs-12 text-right">
      <%= f.submit "Reset Password", class: "btn btn-lg btn-block btn-effect-ripple btn-primary" %>
    </div>
  </div>
  <% end %>
<!-- END Password Edit Form -->

