<%= content_for :title, 'Resend Confirmation' %>

<%= simple_form_for(resource, as: resource_name, url: confirmation_path(resource_name), html: { role: 'form'}) do |f| %>

  <% if f.full_error :confirmation_token %>
    <div class="alert alert-danger">
      <%= f.full_error :confirmation_token, class: "text-light-important" %>
    </div>
  <% end %>

      <%= f.input :email, required: true, autofocus: true, placeholder: "Enter your email.." %>

  <div class="form-group form-actions">
      <%= f.button :button, 'Resend confirmation instructions', class: 'btn btn-lg btn-block btn-effect-ripple btn-primary', data: { disable_with: '<i class="fa fa-circle-o-notch fa-spin"></i> loading...' } %>
  </div>
<% end %>
