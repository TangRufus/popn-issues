<%= content_for :title, 'Login' %>

<!-- Login Form -->
<%= simple_form_for(resource, as: resource_name, url: session_path(resource_name), html: { role: 'form', class: "form-horizontal"}) do |f| %>
  <%= devise_error_messages! %>
  <div class="form-group">
    <div class="col-xs-12">
      <%= f.input :login, autofocus: true, class: 'form-control', placeholder: "Your username or email..", required: true %>
    </div>
  </div>
  <div class="form-group">
    <div class="col-xs-12">
     <%= f.input :password, class: 'form-control', placeholder: "Your password..", required: true %>
   </div>
  </div>
  <div class="form-group form-actions">
    <div class="col-xs-8">
      <label class="csscheckbox csscheckbox-primary">
        <%= f.check_box :remember_me %>
        <span></span>
      </label>
      Remember Me?
    </div>
    <div class="col-xs-4 text-right">
      <%= f.submit "Login", class: "btn btn-lg btn-block btn-effect-ripple btn-primary" %>
    </div>
  </div>
  <% end %>
<!-- END Login Form -->
