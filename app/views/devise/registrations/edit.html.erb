<%= content_for :title, 'Account Settings' %>

<!-- User Edit Form -->
<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { :method => :put, role: 'form', class: "form-horizontal"}) do |f| %>

<div class="form-group">
  <div class="col-xs-12">
    <%= f.input :email, autofocus: true, class: 'form-control', placeholder: "Your email..", required: true %>
  </div>

  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
  <div class="alert alert-warning">
    <p>Currently waiting confirmation for: <%= resource.unconfirmed_email %></p>
  </div>
  <% end %>
</div>

<div class="col-xs-12">
  <%= f.input :username, class: 'form-control', placeholder: "Your username.." %>
</div>

<p>Leave these fields blank if you don't want to change your password.</p>
<div class="form-group">
  <div class="col-xs-12">
   <%= f.input :password, class: 'form-control', placeholder: "New password.." %>
 </div>
</div>
<div class="form-group">
  <div class="col-xs-12">
   <%= f.input :password_confirmation, class: 'form-control', placeholder: "New password again.." %>
 </div>
</div>
<p>You must enter your current password to make changes.</p>
<div class="form-group">
  <div class="col-xs-12">
    <%= f.input :current_password, class: 'form-control', placeholder: "Current password..", required: true %>
  </div>
</div>
<div class="form-group form-actions">
  <div class="col-xs-12 text-right">
    <%= f.submit "Registrater", class: "btn btn-lg btn-block btn-effect-ripple btn-primary" %>
  </div>
</div>
<% end %>
<!-- END User Edit Form -->
