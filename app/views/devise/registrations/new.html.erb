<%= content_for :title, 'Sign Up' %>

<!-- Login Form -->
<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { role: 'form', class: "form-horizontal"}) do |f| %>
  <div class="form-group">
    <div class="col-xs-12">
      <%= f.input :email, autofocus: true, class: 'form-control', placeholder: "Your email..", required: true %>
    </div>
  </div>
  <div class="form-group">
    <div class="col-xs-12">
      <%= f.input :username, class: 'form-control', placeholder: "Your username..", required: true %>
    </div>
  </div>
  <div class="form-group">
    <div class="col-xs-12">
     <%= f.input :password, class: 'form-control', placeholder: "Your password..", required: true %>
   </div>
  </div>
    <div class="form-group">
    <div class="col-xs-12">
     <%= f.input :password_confirmation, class: 'form-control', placeholder: "Your password again..", required: true %>
   </div>
  </div>
  <div class="form-group form-actions">
    <div class="col-xs-12 text-right">
      <%= f.submit "Registrater", class: "btn btn-lg btn-block btn-effect-ripple btn-primary" %>
    </div>
  </div>
  <% end %>
<!-- END Login Form -->
